print("=== salt v2 TEST START ===")

local Player = game.Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui", 15)

if not PlayerGui then
    print("ERROR: PlayerGui не найден за 15 сек!")
    return
end

print("PlayerGui найден")

local sg = Instance.new("ScreenGui")
sg.Name = "saltv2_test"
sg.ResetOnSpawn = false
sg.DisplayOrder = 10000
sg.IgnoreGuiInset = true
sg.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
sg.Parent = PlayerGui

print("ScreenGui создан и привязан")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
frame.BorderSizePixel = 0
frame.Parent = sg

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 16)
corner.Parent = frame

local text = Instance.new("TextLabel")
text.Size = UDim2.new(1, 0, 1, 0)
text.BackgroundTransparency = 1
text.Text = "salt v2\n\nЕсли видишь это окно — GUI работает\n\nТеперь проблема в сложном коде"
text.TextColor3 = Color3.fromRGB(0, 255, 128)
text.TextScaled = true
text.Font = Enum.Font.GothamBold
text.Parent = frame

print("=== salt v2 TEST WINDOW CREATED ===")
print("Если окно не видно — проблема в executor'e или игре. Проверь консоль.")
