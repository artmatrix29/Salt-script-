    DefensePage.Visible = false
    AttackPage.Visible = false
    MiscPage.Visible = true
end)

-- Закрытие
CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    print("Закрыто крестиком")
end)

